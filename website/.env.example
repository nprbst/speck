# Documentation Sync Configuration
# Used by website/scripts/sync-docs.ts to locate documentation source

# Path to docs directory in main repository
# For monorepo (current): Use relative path to /docs directory
# For separate repo: Use Git repo URL
DOCS_SOURCE_PATH=../docs

# Main repository URL (for Git sparse checkout, when website is in separate repo)
# MAIN_REPO_URL=https://github.com/nprbst/speck.git

# Cloudflare Turnstile (public site key - safe to commit)
# Get this from: https://dash.cloudflare.com/ → Turnstile → Add site
PUBLIC_TURNSTILE_SITE_KEY=your_turnstile_site_key

# Cloudflare Pages Environment Variables (set in CF dashboard, not needed locally)
# CF_PAGES=1
# CF_PAGES_BRANCH=main
# CF_PAGES_COMMIT_SHA=abc123
