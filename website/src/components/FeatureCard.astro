---
/**
 * Feature Card Component - Organic Theme
 * Card with soft gradients, gentle hover animations, and warm shadows
 */

export interface Props {
  title: string;
  description: string;
  icon: string;
  link?: {
    text: string;
    href: string;
  };
  index?: number;
}

const { title, description, icon, link, index = 0 } = Astro.props;
const animationDelay = `${index * 100}ms`;
---

<div class="feature-card" style={`animation-delay: ${animationDelay}`}>
  <div class="feature-icon-wrapper">
    <div class="feature-icon" set:html={icon} />
  </div>
  <h3 class="feature-title">{title}</h3>
  <p class="feature-description">{description}</p>
  {
    link && (
      <a href={link.href} class="feature-link">
        {link.text}
        <span class="link-arrow">â†’</span>
      </a>
    )
  }
</div>

<style>
  .feature-card {
    position: relative;
    background: var(--gradient-card);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-xl);
    padding: var(--space-xl);
    transition: all var(--transition-normal);
    box-shadow: var(--shadow-sm);
    animation: fadeInUp 0.6s var(--ease-out-soft) both;
    overflow: hidden;
  }

  /* Soft gradient overlay on hover */
  .feature-card::before {
    content: '';
    position: absolute;
    inset: 0;
    background: radial-gradient(
      circle at top right,
      var(--color-accent-subtle) 0%,
      transparent 70%
    );
    opacity: 0;
    transition: opacity var(--transition-normal);
    pointer-events: none;
  }

  .feature-card:hover {
    transform: translateY(-6px);
    box-shadow: var(--shadow-lg);
    border-color: var(--color-accent-subtle);
  }

  .feature-card:hover::before {
    opacity: 1;
  }

  .feature-icon-wrapper {
    position: relative;
    width: 3.5rem;
    height: 3.5rem;
    margin-bottom: var(--space-lg);
  }

  /* Soft glow behind icon */
  .feature-icon-wrapper::before {
    content: '';
    position: absolute;
    inset: -8px;
    background: var(--color-accent);
    border-radius: var(--radius-full);
    opacity: 0.1;
    filter: blur(12px);
    transition: opacity var(--transition-normal), transform var(--transition-normal);
  }

  .feature-card:hover .feature-icon-wrapper::before {
    opacity: 0.2;
    transform: scale(1.2);
  }

  .feature-icon {
    position: relative;
    width: 100%;
    height: 100%;
    color: var(--color-accent);
    transition: transform var(--transition-organic);
  }

  .feature-card:hover .feature-icon {
    transform: scale(1.1);
  }

  .feature-icon :global(svg) {
    width: 100%;
    height: 100%;
    stroke: currentColor;
    stroke-width: 1.75;
    fill: none;
  }

  .feature-title {
    font-family: var(--font-heading);
    font-size: 1.375rem;
    font-weight: 600;
    margin-bottom: var(--space-sm);
    color: var(--color-text);
    position: relative;
    transition: color var(--transition-normal);
  }

  .feature-card:hover .feature-title {
    color: var(--color-accent);
  }

  .feature-description {
    color: var(--color-text-secondary);
    margin-bottom: var(--space-md);
    line-height: 1.75;
    position: relative;
  }

  .feature-link {
    display: inline-flex;
    align-items: center;
    gap: 0.375rem;
    color: var(--color-accent);
    font-weight: 600;
    text-decoration: none;
    position: relative;
    transition: color var(--transition-normal);
  }

  .feature-link::after {
    content: '';
    position: absolute;
    bottom: -2px;
    left: 0;
    width: 0;
    height: 2px;
    background: var(--color-accent);
    border-radius: var(--radius-full);
    transition: width var(--transition-normal);
  }

  .feature-link:hover {
    color: var(--color-accent-hover);
  }

  .feature-link:hover::after {
    width: calc(100% - 1.5rem);
  }

  .link-arrow {
    display: inline-block;
    transition: transform var(--transition-organic);
  }

  .feature-link:hover .link-arrow {
    transform: translateX(4px);
  }

  /* Reduced motion */
  @media (prefers-reduced-motion: reduce) {
    .feature-card {
      animation: none;
    }

    .feature-card:hover {
      transform: none;
    }

    .feature-card:hover .feature-icon {
      transform: none;
    }

    .link-arrow {
      transition: none;
    }
  }
</style>
