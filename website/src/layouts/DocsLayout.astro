---
/**
 * Documentation Layout
 * Layout for documentation pages with sidebar navigation and table of contents
 */

import BaseLayout from '@/layouts/BaseLayout.astro';
import Sidebar from '@/components/Sidebar.astro';
import type { MarkdownHeading } from 'astro';

interface Props {
  title: string;
  description: string;
  slug: string;
  category: string;
  headings?: MarkdownHeading[];
  allDocs: Array<{
    slug: string;
    title: string;
    category: string;
    order: number;
  }>;
}

const { title, description, slug, category, headings = [], allDocs } = Astro.props;

// Filter headings to h2 and h3 only (for table of contents)
const tocHeadings = headings.filter(h => h.depth <= 3);

// Build breadcrumbs
const breadcrumbs = [
  { title: 'Home', href: '/' },
  { title: 'Docs', href: '/docs/getting-started/quick-start' },
  { title: category.split('-').map(word => word.charAt(0).toUpperCase() + word.slice(1)).join(' '), href: `#${category}` },
  { title, href: `/docs/${slug}` },
];

// SEO metadata
const seoTitle = `${title} - Speck Documentation`;
const canonicalURL = new URL(`/docs/${slug}`, Astro.site || 'https://speck.dev');
---

<BaseLayout
  title={seoTitle}
  description={description}
  canonical={canonicalURL.href}
>
  <div class="docs-container">
    <Sidebar docs={allDocs} currentSlug={slug} />

    <main class="docs-main">
      <div class="docs-content">
        <nav class="breadcrumbs" aria-label="Breadcrumb">
          <ol class="breadcrumb-list">
            {breadcrumbs.map((crumb, index) => (
              <li class="breadcrumb-item">
                {index < breadcrumbs.length - 1 ? (
                  <>
                    <a href={crumb.href} class="breadcrumb-link">{crumb.title}</a>
                    <span class="breadcrumb-separator" aria-hidden="true">/</span>
                  </>
                ) : (
                  <span class="breadcrumb-current" aria-current="page">{crumb.title}</span>
                )}
              </li>
            ))}
          </ol>
        </nav>

        <article class="prose">
          <slot />
        </article>
      </div>

      {tocHeadings.length > 0 && (
        <aside class="toc">
          <nav class="toc-nav" aria-label="Table of contents">
            <h2 class="toc-title">On this page</h2>
            <ul class="toc-list">
              {tocHeadings.map(heading => (
                <li class:list={['toc-item', `toc-depth-${heading.depth}`]}>
                  <a href={`#${heading.slug}`} class="toc-link">
                    {heading.text}
                  </a>
                </li>
              ))}
            </ul>
          </nav>
        </aside>
      )}
    </main>
  </div>

  <footer class="docs-footer">
    <div class="container footer-content">
      <p>&copy; {new Date().getFullYear()} Speck. MIT License. Built on <a href="https://github.com/github/spec-kit" target="_blank" rel="noopener noreferrer">GitHub's spec-kit</a>.</p>
    </div>
  </footer>
</BaseLayout>

<style>
  .docs-container {
    display: flex;
    min-height: calc(100vh - 60px); /* Subtract header height */
  }

  .docs-main {
    flex: 1;
    display: flex;
    max-width: 100%;
  }

  .docs-content {
    flex: 1;
    max-width: 45rem;
    padding: 2rem 3rem;
    margin: 0 auto;
  }

  /* Breadcrumbs */
  .breadcrumbs {
    margin-bottom: 2rem;
  }

  .breadcrumb-list {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    list-style: none;
    margin: 0;
    padding: 0;
    font-size: 0.875rem;
    color: var(--color-text-secondary);
  }

  .breadcrumb-item {
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .breadcrumb-link {
    color: var(--color-text-secondary);
    text-decoration: none;
    transition: color 0.15s;
  }

  .breadcrumb-link:hover {
    color: var(--color-accent);
  }

  .breadcrumb-separator {
    color: var(--color-border);
  }

  .breadcrumb-current {
    color: var(--color-text);
    font-weight: 500;
  }

  /* Prose styling for markdown content */
  .prose {
    line-height: 1.7;
    color: var(--color-text);
  }

  .prose :global(h1) {
    font-size: 2.25rem;
    font-weight: 700;
    line-height: 1.2;
    margin-top: 0;
    margin-bottom: 1.5rem;
    color: var(--color-text);
  }

  .prose :global(h2) {
    font-size: 1.75rem;
    font-weight: 600;
    line-height: 1.3;
    margin-top: 3rem;
    margin-bottom: 1rem;
    padding-bottom: 0.5rem;
    border-bottom: 1px solid var(--color-border);
    color: var(--color-text);
  }

  .prose :global(h3) {
    font-size: 1.375rem;
    font-weight: 600;
    line-height: 1.4;
    margin-top: 2rem;
    margin-bottom: 0.75rem;
    color: var(--color-text);
  }

  .prose :global(p) {
    margin: 1rem 0;
  }

  .prose :global(a) {
    color: var(--color-accent);
    text-decoration: none;
    border-bottom: 1px solid transparent;
    transition: border-color 0.15s;
  }

  .prose :global(a:hover) {
    border-bottom-color: var(--color-accent);
  }

  .prose :global(code) {
    background: var(--color-code-bg);
    color: var(--color-code-text);
    padding: 0.2em 0.4em;
    border-radius: 0.25rem;
    font-size: 0.9em;
    font-family: 'Monaco', 'Menlo', 'Courier New', monospace;
  }

  .prose :global(pre) {
    background: var(--color-code-bg);
    padding: 1rem;
    border-radius: 0.5rem;
    overflow-x: auto;
    margin: 1.5rem 0;
  }

  .prose :global(pre code) {
    background: none;
    padding: 0;
  }

  .prose :global(ul),
  .prose :global(ol) {
    margin: 1rem 0;
    padding-left: 1.5rem;
  }

  .prose :global(li) {
    margin: 0.5rem 0;
  }

  .prose :global(blockquote) {
    border-left: 4px solid var(--color-accent);
    padding-left: 1rem;
    margin: 1.5rem 0;
    color: var(--color-text-secondary);
    font-style: italic;
  }

  /* Table of Contents */
  .toc {
    display: none;
    width: 220px;
    padding: 2rem 1.5rem;
    position: sticky;
    top: 80px;
    height: fit-content;
    max-height: calc(100vh - 100px);
    overflow-y: auto;
  }

  @media (min-width: 1200px) {
    .toc {
      display: block;
    }
  }

  .toc-title {
    font-size: 0.875rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: var(--color-text-secondary);
    margin: 0 0 1rem 0;
  }

  .toc-list {
    list-style: none;
    margin: 0;
    padding: 0;
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .toc-item {
    margin: 0;
  }

  .toc-link {
    display: block;
    font-size: 0.875rem;
    color: var(--color-text-secondary);
    text-decoration: none;
    transition: color 0.15s;
    line-height: 1.4;
  }

  .toc-link:hover {
    color: var(--color-accent);
  }

  .toc-depth-2 {
    padding-left: 0;
  }

  .toc-depth-3 {
    padding-left: 1rem;
  }

  /* Footer */
  .docs-footer {
    background: var(--color-bg-secondary);
    border-top: 1px solid var(--color-border);
    padding: var(--space-lg) 0;
    margin-top: var(--space-2xl);
  }

  .footer-content {
    text-align: center;
  }

  .footer-content p {
    color: var(--color-text-muted);
    font-size: 0.875rem;
    margin: 0;
  }

  .footer-content a {
    color: var(--color-accent);
    text-decoration: none;
    border-bottom: 1px solid transparent;
    transition: border-color 0.15s;
  }

  .footer-content a:hover {
    border-bottom-color: var(--color-accent);
  }

  /* Mobile responsive */
  @media (max-width: 768px) {
    .docs-content {
      padding: 1.5rem 1rem;
    }

    .prose :global(h1) {
      font-size: 1.75rem;
    }

    .prose :global(h2) {
      font-size: 1.5rem;
    }

    .prose :global(h3) {
      font-size: 1.25rem;
    }
  }
</style>
