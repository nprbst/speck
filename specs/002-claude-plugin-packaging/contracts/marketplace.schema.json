{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://code.claude.com/schemas/marketplace.json",
  "title": "Claude Code Marketplace Manifest",
  "description": "Schema for .claude-plugin/marketplace.json marketplace listing",
  "type": "object",
  "required": [
    "name",
    "owner",
    "plugins"
  ],
  "properties": {
    "name": {
      "type": "string",
      "description": "Marketplace identifier in kebab-case",
      "pattern": "^[a-z0-9-]+$",
      "minLength": 1,
      "maxLength": 64,
      "examples": [
        "speck-marketplace",
        "my-plugins",
        "claude-tools"
      ]
    },
    "owner": {
      "type": "object",
      "description": "Marketplace maintainer information",
      "required": [
        "name"
      ],
      "properties": {
        "name": {
          "type": "string",
          "description": "Maintainer's full name or organization",
          "minLength": 1,
          "examples": [
            "Nathan Prabst",
            "Speck Community"
          ]
        },
        "email": {
          "type": "string",
          "description": "Maintainer's contact email",
          "format": "email",
          "examples": [
            "maintainer@example.com"
          ]
        },
        "url": {
          "type": "string",
          "description": "Maintainer's website or profile URL",
          "format": "uri",
          "examples": [
            "https://github.com/nprbst"
          ]
        }
      },
      "additionalProperties": false
    },
    "metadata": {
      "type": "object",
      "description": "Marketplace-level metadata",
      "properties": {
        "description": {
          "type": "string",
          "description": "Brief marketplace overview",
          "minLength": 10,
          "maxLength": 2048,
          "examples": [
            "Official Speck plugin marketplace for specification and planning tools"
          ]
        },
        "version": {
          "type": "string",
          "description": "Marketplace version (semantic versioning)",
          "pattern": "^\\d+\\.\\d+\\.\\d+$",
          "examples": [
            "1.0.0"
          ]
        },
        "pluginRoot": {
          "type": "string",
          "description": "Base path for relative plugin sources",
          "examples": [
            "./plugins/",
            "https://example.com/plugins/"
          ]
        }
      },
      "additionalProperties": false
    },
    "plugins": {
      "type": "array",
      "description": "Array of plugin entries available in this marketplace",
      "minItems": 1,
      "items": {
        "$ref": "#/definitions/pluginEntry"
      }
    }
  },
  "additionalProperties": false,
  "definitions": {
    "pluginEntry": {
      "type": "object",
      "description": "Plugin entry in marketplace catalog",
      "required": [
        "name",
        "source"
      ],
      "properties": {
        "name": {
          "type": "string",
          "description": "Plugin identifier in kebab-case",
          "pattern": "^[a-z0-9-]+$",
          "minLength": 1,
          "maxLength": 64,
          "examples": [
            "speck",
            "my-plugin"
          ]
        },
        "source": {
          "description": "Plugin source location (URL or relative path)",
          "oneOf": [
            {
              "type": "string",
              "format": "uri",
              "description": "HTTP(S) URL to plugin repository"
            },
            {
              "type": "string",
              "pattern": "^(\\./|../|[a-zA-Z0-9-_/]+)",
              "description": "Relative file path to plugin directory"
            },
            {
              "type": "object",
              "description": "Advanced source configuration",
              "required": [
                "url"
              ],
              "properties": {
                "url": {
                  "type": "string",
                  "format": "uri",
                  "description": "Plugin repository URL"
                },
                "ref": {
                  "type": "string",
                  "description": "Git ref (branch, tag, commit)",
                  "examples": [
                    "main",
                    "v1.0.0",
                    "abc123"
                  ]
                }
              },
              "additionalProperties": false
            }
          ],
          "examples": [
            "https://github.com/nprbst/speck",
            "./plugins/speck",
            {
              "url": "https://github.com/nprbst/speck",
              "ref": "v0.1.0"
            }
          ]
        },
        "description": {
          "type": "string",
          "description": "Plugin description (supplements or overrides plugin.json)",
          "minLength": 10,
          "maxLength": 1024,
          "examples": [
            "Specification and planning workflow framework"
          ]
        },
        "version": {
          "type": "string",
          "description": "Plugin version (semantic versioning)",
          "pattern": "^\\d+\\.\\d+\\.\\d+$",
          "examples": [
            "0.1.0",
            "1.2.3"
          ]
        },
        "author": {
          "type": "object",
          "description": "Plugin author (supplements or overrides plugin.json)",
          "properties": {
            "name": {
              "type": "string",
              "description": "Author name",
              "minLength": 1
            },
            "email": {
              "type": "string",
              "format": "email",
              "description": "Author email"
            },
            "url": {
              "type": "string",
              "format": "uri",
              "description": "Author URL"
            }
          },
          "additionalProperties": false
        },
        "homepage": {
          "type": "string",
          "description": "Plugin homepage URL",
          "format": "uri",
          "examples": [
            "https://github.com/nprbst/speck"
          ]
        },
        "repository": {
          "type": "string",
          "description": "Source repository URL",
          "examples": [
            "https://github.com/nprbst/speck"
          ]
        },
        "license": {
          "type": "string",
          "description": "SPDX license identifier",
          "examples": [
            "MIT",
            "Apache-2.0"
          ]
        },
        "keywords": {
          "type": "array",
          "description": "Search keywords and tags",
          "items": {
            "type": "string",
            "minLength": 1,
            "maxLength": 64
          },
          "minItems": 0,
          "maxItems": 10,
          "uniqueItems": true,
          "examples": [
            [
              "specification",
              "planning",
              "workflow"
            ]
          ]
        },
        "category": {
          "type": "string",
          "description": "Plugin category for organization",
          "enum": [
            "development-tools",
            "productivity",
            "testing",
            "documentation",
            "deployment",
            "data-science",
            "security",
            "utilities",
            "other"
          ],
          "examples": [
            "development-tools"
          ]
        },
        "strict": {
          "type": "boolean",
          "description": "Require plugin.json manifest (default: true). If false, marketplace entry serves as manifest.",
          "default": true,
          "examples": [
            true,
            false
          ]
        }
      },
      "additionalProperties": false
    }
  },
  "examples": [
    {
      "name": "speck-marketplace",
      "owner": {
        "name": "Nathan Prabst",
        "email": "nathan@example.com"
      },
      "metadata": {
        "description": "Official Speck plugin marketplace",
        "version": "1.0.0"
      },
      "plugins": [
        {
          "name": "speck",
          "source": "https://github.com/nprbst/speck",
          "description": "Specification and planning workflow framework for Claude Code",
          "version": "0.1.0",
          "author": {
            "name": "Nathan Prabst"
          },
          "homepage": "https://github.com/nprbst/speck",
          "repository": "https://github.com/nprbst/speck",
          "license": "MIT",
          "keywords": [
            "specification",
            "planning",
            "workflow",
            "feature-management"
          ],
          "category": "development-tools",
          "strict": true
        }
      ]
    }
  ]
}
