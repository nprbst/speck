{
  "name": "speck",
  "version": "1.10.2",
  "description": "Claude Code-Native Spec-Driven Development",
  "type": "module",
  "workspaces": [
    "packages/*",
    "plugins/*"
  ],
  "engines": {
    "bun": ">=1.0.0"
  },
  "bin": {
    "speck": "./dist/cli/index.js"
  },
  "scripts": {
    "dev": "bun run plugins/speck/cli/index.ts",
    "build": "bun build plugins/speck/cli/index.ts --outdir dist/cli --target bun",
    "build:standalone": "bun build plugins/speck/cli/index.ts --compile --outfile speck",
    "build-plugin": "bun run scripts/build-plugin.ts",
    "copy-plugin": "bun run scripts/copy-plugin.ts",
    "publish-plugin": "bun run scripts/publish-plugin.ts",
    "version:patch": "bun run scripts/version.ts patch",
    "version:minor": "bun run scripts/version.ts minor",
    "version:major": "bun run scripts/version.ts major",
    "test": "bun test ./tests/**/*.test.ts",
    "test:hooks": "bun test tests/hooks/",
    "test:unit": "bun test tests/build/",
    "test:visual": "bun run website:build && playwright test tests/visual/",
    "test:a11y": "bun run website:build && playwright test tests/accessibility/",
    "test:all": "bun test && bun run test:visual && bun run test:a11y",
    "check": "tsc --noEmit",
    "typecheck": "bun run check",
    "typecheck:watch": "tsc --noEmit --watch",
    "lint": "eslint 'packages/**/*.ts' 'plugins/**/*.ts' 'scripts/**/*.ts'",
    "lint:fix": "eslint 'packages/**/*.ts' 'plugins/**/*.ts' 'scripts/**/*.ts' --fix",
    "format": "prettier --log-level warn --write \"packages/**/*.ts\" \"plugins/**/*.ts\" \"scripts/**/*.ts\" \"tests/**/*.ts\"",
    "format:check": "prettier --check \"packages/**/*.ts\" \"plugins/**/*.ts\" \"scripts/**/*.ts\" \"tests/**/*.ts\"",
    "dead-code": "knip --no-progress",
    "fix": "bun run format && bun run lint:fix",
    "preflight": "bun run format && bun run lint && bun run check && bun run test && bun run build",
    "website:sync": "bun website/scripts/sync-docs.ts",
    "website:dev": "cd website && bun run dev",
    "website:build": "bun run website:sync && cd website && bun run build",
    "website:preview": "cd website && bun run preview",
    "website:deploy": "npx wrangler pages deploy",
    "website:verify": "bun website/scripts/verify-deployment.ts"
  },
  "dependencies": {
    "ajv": "^8.17.1",
    "chalk": "^5.3.0",
    "commander": "^14.0.2",
    "handlebars": "^4.7.8",
    "marked": "^17.0.1",
    "ora": "^7.0.1",
    "prompts": "^2.4.2",
    "resend": "^6.5.2",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.11.0",
    "@fission-ai/openspec": "0.16.0",
    "@playwright/test": "^1.56.1",
    "@types/bun": "^1.3.2",
    "@types/marked": "^6.0.0",
    "@types/node": "^24.10.1",
    "@types/prompts": "^2.4.9",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "knip": "^5.70.2",
    "prettier": "^3.1.1",
    "typescript": "^5.3.3"
  },
  "keywords": [
    "specification",
    "spec-kit",
    "claude-code",
    "bun",
    "typescript",
    "feature-management"
  ],
  "author": "Nathan Prabst",
  "license": "MIT"
}