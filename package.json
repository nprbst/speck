{
  "name": "speck",
  "version": "1.1.0",
  "description": "Claude Code-Optimized Specification Framework",
  "type": "module",
  "engines": {
    "bun": ">=1.0.0"
  },
  "bin": {
    "speck": "./dist/cli/index.js"
  },
  "scripts": {
    "dev": "bun run src/cli/index.ts",
    "build": "bun build src/cli/index.ts --outdir dist --target bun",
    "build:standalone": "bun build src/cli/index.ts --compile --outfile speck",
    "build-plugin": "bun run scripts/build-plugin.ts",
    "publish-plugin": "bun run scripts/publish-plugin.ts",
    "version:patch": "bun run scripts/version.ts patch",
    "version:minor": "bun run scripts/version.ts minor",
    "version:major": "bun run scripts/version.ts major",
    "test": "bun test",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\""
  },
  "dependencies": {
    "chalk": "^5.3.0",
    "commander": "^11.1.0",
    "handlebars": "^4.7.8",
    "marked": "^11.1.0",
    "ora": "^7.0.1",
    "prompts": "^2.4.2",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/bun": "^1.3.2",
    "@types/node": "^24.10.1",
    "@types/prompts": "^2.4.9",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "prettier": "^3.1.1",
    "typescript": "^5.3.3"
  },
  "keywords": [
    "specification",
    "spec-kit",
    "claude-code",
    "bun",
    "typescript",
    "feature-management"
  ],
  "author": "Nathan Prabst",
  "license": "MIT"
}
